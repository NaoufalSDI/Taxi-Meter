<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="#161616"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/cities_img"
        android:layout_width="900dp"
        android:layout_height="900dp"
        android:src="@drawable/city_black_background"
        app:layout_constraintTop_toTopOf="@id/logoTaxi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/logoTaxi"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="5dp"
        android:src="@drawable/taxi_logo_splash"/>

    <TextView
        android:id="@+id/text_splash"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/splash_text"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_semibold"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#FFD700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoTaxi"/>


</androidx.constraintlayout.widget.ConstraintLayout>